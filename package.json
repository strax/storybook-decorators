{
  "name": "storybook-decorators",
  "version": "0.3.1",
  "description": "Provides small, composable decorators for enhancing Storybook development",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "typings": "dist/index.d.ts",
  "author": "Sami Kukkonen <sami@samikukkonen.fi>",
  "license": "MIT",
  "scripts": {
    "prepublishOnly": "npm run build",
    "build": "rollup -c",
    "start": "start-storybook -p 9001 -c example/.storybook"
  },
  "devDependencies": {
    "@storybook/react": "3.4.10",
    "@types/enzyme": "3.1.9",
    "@types/jest": "22.2.3",
    "@types/react": "16.4.9",
    "@types/react-dom": "16.0.7",
    "@types/storybook__react": "3.0.9",
    "babel-core": "6.26.3",
    "babel-preset-env": "1.6.1",
    "enzyme": "3.3.0",
    "enzyme-adapter-react-16": "1.1.1",
    "enzyme-to-json": "3.6.2",
    "identity-obj-proxy": "3.0.0",
    "jest": "22.4.3",
    "jest-image-snapshot": "2.4.0",
    "jest-styled-components": "6.0.0",
    "react": "16.4.2",
    "react-dom": "16.4.2",
    "rollup": "0.64.1",
    "rollup-plugin-commonjs": "9.1.5",
    "rollup-plugin-node-resolve": "3.3.0",
    "rollup-plugin-typescript2": "0.16.1",
    "rollup-plugin-url": "1.4.0",
    "styled-components": "3.4.2",
    "ts-jest": "23.1.3",
    "typescript": "3.0.1"
  },
  "peerDependencies": {
    "react": "^16.3.0",
    "react-dom": "^16.3.0",
    "styled-components": "^3.0.0"
  },
  "resolutions": {
    "fsevents": "1.2.4"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/"
    ],
    "moduleNameMapper": {
      "\\.svg$": "identity-obj-proxy"
    },
    "setupTestFrameworkScriptFile": "<rootDir>/testSetup.js",
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "node"
    ],
    "globals": {
      "ts-jest": {
        "useBabelrc": true
      }
    }
  }
}
